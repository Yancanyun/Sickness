<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.emenu.mapper.table.TableMapper">
    <select id="listAll" resultMap="pw.Table">
        SELECT
            `id`,
            `area_id`,
            `name`,
            `seat_num`,
            `seat_fee`,
            `table_fee`,
            `min_cost`,
            `state`,
            `qrcode_path`
        FROM `t_table`
        WHERE `state` != 6
        ORDER BY `area_id`, `id`
    </select>

    <select id="listByAreaId" resultMap="pw.Table">
        SELECT
            `id`,
            `area_id`,
            `name`,
            `seat_num`,
            `seat_fee`,
            `table_fee`,
            `min_cost`,
            `state`,
            `qrcode_path`
        FROM `t_table`
        WHERE `area_id` = #{areaId} AND `state` != 6
        ORDER BY `area_id`, `id`
    </select>

    <select id="listByState" resultMap="pw.Table">
        SELECT
            `id`,
            `area_id`,
            `name`,
            `seat_num`,
            `seat_fee`,
            `table_fee`,
            `min_cost`,
            `state`,
            `qrcode_path`
        FROM `t_table`
        WHERE `state` = #{state}
        ORDER BY `area_id`, `id`
    </select>

    <select id="listByAreaIdAndState" resultMap="pw.Table">
        SELECT
            `id`,
            `area_id`,
            `name`,
            `seat_num`,
            `seat_fee`,
            `table_fee`,
            `min_cost`,
            `state`,
            `qrcode_path`
        FROM `t_table`
        WHERE `area_id` = #{areaId} AND `state` = #{state}
        ORDER BY `area_id`, `id`
    </select>

    <select id="queryStateById" resultType="int">
        SELECT `state`
        FROM `t_table`
        WHERE `id` = #{id}
    </select>

    <select id="countByName" resultType="int">
        SELECT COUNT(1)
        FROM `t_table`
        WHERE `name` = #{name} AND `state` != 6
    </select>

    <select id="countByAreaId" resultType="int">
        SELECT COUNT(1)
        FROM `t_table`
        WHERE `area_id` = #{areaId} AND `state` != 6
    </select>

    <update id="updateState">
        UPDATE `t_table`
        SET `state` = #{state}
        WHERE `id` = #{id}
    </update>

    <update id="updateQrCode">
        UPDATE `t_table`
        SET `qrcode_path` = #{qrCodePath}
        WHERE `id` = #{id}
    </update>
</mapper>
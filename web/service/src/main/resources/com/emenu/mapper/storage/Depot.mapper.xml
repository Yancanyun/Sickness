<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.emenu.mapper.storage.DepotMapper">

    <select id="queryByName" resultMap="pw.Depot">
        SELECT * FROM `t_storage_depot` WHERE `name` = #{name}
    </select>

    <select id="queryById" resultMap="pw.Depot">
        SELECT * FROM `t_storage_depot` WHERE `id` = #{id}
    </select>

    <select id="listAll" resultMap="pw.Depot">
        SELECT * FROM `t_storage_depot`
    </select>

    <select id="listByPage" resultMap="pw.Depot">
        SELECT *
        FROM `t_storage_depot`
        LIMIT #{offset},#{pageSize}
    </select>

    <select id="countAll" resultType="int">
        SELECT
            COUNT(*)
        FROM `t_storage_depot`
    </select>

    <select id="checkNameIsExist" resultType="int">
        SELECT
            COUNT(*)
        FROM
            `t_storage_depot`
        WHERE `name` = #{name}
    </select>

    <select id="checkNameIsConflict" resultType="int">
            SELECT
               COUNT(*)
             FROM
              `t_storage_depot`
              WHERE `name` = #{name} AND `id` != #{id}
    </select>
</mapper>